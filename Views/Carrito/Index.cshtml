@model List<AplicativoWebMVC.Models.DTOs.CarritoItemDTO>

@{
    ViewData["Title"] = "Mi Carrito";
}

<h2>ðŸ›’ Mi Carrito</h2>

@if (Model == null || !Model.Any())
{
    <p>El carrito estÃ¡ vacÃ­o</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Producto</th>
                <th>Cantidad</th>
                <th>Precio</th>
                <th>Subtotal</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="@item.Imagen" width="60" />
                    <strong>@item.NombreProducto</strong>
                </td>

                <td>
                    <form asp-action="Actualizar" method="post">
                        <input type="hidden" name="idProducto" value="@item.IdProducto" />
                        <input type="number" step="0.001" name="cantidad" value="@item.Cantidad" />
                        <button type="submit">Actualizar</button>
                    </form>
                </td>

                <td>$@item.PrecioUnitario</td>
                <td>$@item.Subtotal</td>

                <td>
                    <form asp-action="Eliminar" method="post">
                        <input type="hidden" name="idCarrito" value="@item.IdCarrito" />
                        <input type="hidden" name="idProducto" value="@item.IdProducto" />
                        <button type="submit">Eliminar</button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>

    <form asp-action="Finalizar" method="post">
        <button type="submit">Finalizar Compra</button>
    </form>
}
