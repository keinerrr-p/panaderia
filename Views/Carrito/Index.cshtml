
@model List<AplicativoWebMVC.Models.DTOs.CarritoItemDTO>
<link rel="stylesheet" href="~/css/carrito.css" />
@{
    ViewData["Title"] = "Mi Carrito";
}
<link rel="stylesheet" href="~/css/carrito.css" />
<style>
.cart-container {
    background: #121827;
    border-radius: 12px;
    padding: 1.5rem;
    box-shadow: 0 10px 30px rgba(0,0,0,.4);
}

.cart-item {
    display: grid;
    grid-template-columns: 80px 1fr 120px 120px 80px;
    gap: 1rem;
    align-items: center;
    padding: 1rem 0;
    border-bottom: 1px solid rgba(212,184,150,.15);
}

.cart-item img {
    width: 70px;
    height: 70px;
    object-fit: cover;
    border-radius: 10px;
}

.cart-title {
    color: #d4b896;
    font-weight: 600;
}

.cart-price {
    color: #e8dcc8;
}

.cart-input {
    width: 80px;
    background: #1a2234;
    border: 1px solid rgba(212,184,150,.3);
    color: #e8dcc8;
    padding: .4rem;
    border-radius: 6px;
}

.cart-btn {
    background: linear-gradient(135deg,#d4b896,#c6a97f);
    border: none;
    padding: .5rem .8rem;
    border-radius: 6px;
    cursor: pointer;
}

.cart-remove {
    background: #ef4444;
    color: white;
}

.cart-total {
    text-align: right;
    margin-top: 1.5rem;
    font-size: 1.3rem;
    color: #d4b896;
}

@@media (max-width: 768px) {
    .cart-item {
        grid-template-columns: 1fr;
        text-align: center;
    }
}
</style>

<h2>ðŸ›’ Mi Carrito</h2>

@if (!Model.Any())
{
    <p>El carrito estÃ¡ vacÃ­o</p>
}
else
{
    <div class="cart-container">

        @foreach (var item in Model)
        {
            <div class="cart-item">
                <img src="@item.Imagen" />

                <div>
                    <div class="cart-title">@item.NombreProducto</div>
                    <div class="cart-price">$@item.PrecioUnitario</div>
                </div>

                <form asp-action="Actualizar" method="post">
                    <input type="hidden" name="idProducto" value="@item.IdProducto" />
                    <input class="cart-input" type="number" step="0.001" name="cantidad" value="@item.Cantidad" />
                    <button class="cart-btn" type="submit">âœ”</button>
                </form>

                <div class="cart-price">$@item.Subtotal</div>

                <form asp-action="Eliminar" method="post">
                    <input type="hidden" name="idProducto" value="@item.IdProducto" />
                    <button class="cart-btn cart-remove">âœ–</button>
                </form>
            </div>
        }

        <form asp-action="Finalizar" method="post">
            <button class="cart-btn" style="margin-top:1rem;width:100%">
                Finalizar Compra
            </button>
        </form>
    </div>
}
