@{
    Layout = null; // o usa tu layout si ya tienes uno
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Catálogo - Panadería Artesanal</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- CSS DEL PROTOTIPO -->
    <link rel="stylesheet" href="/css/index.css">
</head>

<body>
<div class="min-h-screen">

    <!-- HEADER -->
    <header class="header">
        <div class="container header-content">
            <div class="header-left">
                <div class="logo">
                    <img src="/images/logo.png" alt="Logo">
                </div>
                <div>
                    <div class="header-title">Panadería Artesanal</div>
                    <div class="header-subtitle">Productos frescos cada día</div>
                </div>
            </div>

            <button class="btn btn-ghost btn-sm" onclick="irALogin()">
                Iniciar Sesión
            </button>
        </div>
    </header>

    <!-- CONTENIDO -->
    <main class="container main-content">

        <div class="section-header text-center mb-2">
            <h2>Nuestros Productos</h2>
            <p class="text-muted">Explora nuestra variedad artesanal</p>
        </div>

        <!-- GRID DE PRODUCTOS -->
        <div id="catalogo"
             class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-3 gap-6">
        </div>

        <!-- CTA -->
        <div class="cta-banner mt-4 text-center">
            <h3>¿Listo para hacer tu pedido?</h3>
            <p class="text-muted">Inicia sesión para comprar nuestros productos</p>
            <button class="btn btn-primary btn-lg mt-2" onclick="irALogin()">
                Comenzar a Comprar
            </button>
        </div>

    </main>

    <!-- FOOTER -->
    <footer class="footer">
        <div class="footer-content container">
            <div>
                <h4>Panadería Artesanal</h4>
                <p class="text-sm">© 2025 Todos los derechos reservados</p>
            </div>
        </div>
    </footer>

</div>

<script>
    const API_URL = "http://localhost:5026/api/Catalogo/publico";
    const LOGIN_URL = '@Url.Action("Index", "LoginMvc")';

    async function cargarCatalogo() {
        try {
            const response = await fetch(API_URL);
            if (!response.ok) throw new Error("Error HTTP");

            const productos = await response.json();
            const contenedor = document.getElementById("catalogo");

            contenedor.innerHTML = "";

            if (productos.length === 0) {
                contenedor.innerHTML = `
                    <div class="empty-state">
                        <p class="text-muted">No hay productos disponibles</p>
                    </div>`;
                return;
            }
 
            productos.forEach(p => {
    const card = document.createElement("div");
    card.className = "card overflow-hidden transition-all";

    card.innerHTML = `
        <div class="aspect-video overflow-hidden">
            <img
                src="${p.imagen || 'https://via.placeholder.com/400x300?text=Sin+Imagen'}"
                alt="${p.nombreProducto}"
                class="product-image w-full h-full object-cover">
        </div>

        <div class="card-content space-y-3">
            <div class="flex justify-between items-center">
                <h4 class="truncate">${p.nombreProducto}</h4>
                
                <span class="badge badge-primary">${p.categoria.nombreCategoria}</span>
            </div

            <p class="text-sm text-muted truncate">
                ${p.descripcion || 'Producto artesanal'} do
            </p>
            
            <div class="flex justify-between items-center mt-2">
                <span class="text-primary text-2xl">
                    $${p.precio.toFixed(2)}
                </span>

                <button class="btn btn-primary btn-sm"
                        onclick="irALogin()">
                    Comprar
                </button>
            </div>
        </div>
    `;

    contenedor.appendChild(card);
});

        } catch (error) {
            console.error(error);
            document.getElementById("catalogo").innerHTML =
                "<p>Error cargando productos</p>";
        }
    }

    function irALogin() {
        window.location.href = LOGIN_URL;
    }

    document.addEventListener("DOMContentLoaded", cargarCatalogo);
</script>

</body>
</html>
