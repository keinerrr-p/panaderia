
@model AplicativoWebMVC.Models.DTOs.PerfilDTO
@{
    ViewData["Title"] = "Mi Perfil";
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}

<link rel="stylesheet" href="/css/perfil.css" />

<div class="auth-container">
    <h2>Editar Perfil</h2>
    <p class="subtitle">Actualiza tu información personal</p>

    <form asp-action="Editar" method="post">
        <input type="hidden" asp-for="IdUsuario" />

        <div class="form-group">
            <label>Nombre de usuario</label>
            <input asp-for="NombreUsuario" />
        </div>

        <div class="form-group">
            <label>Correo electrónico</label>
            <input asp-for="Email"
            required
            pattern="^[a-zA-Z0-9._%+-]+gmail\.com$" />
        </div>

        <div class="form-group">
            <label>Teléfono</label>
            <input asp-for="Telefono" 
             required 
               pattern="[0-9]{10}"/>
        </div>

        <div class="form-group">
            <label>Nueva contraseña</label>
            <input asp-for="NuevaContrasena" type="password"
             minlength="8" />
        </div>

        <div class="form-group">
            <label>Confirmar contraseña</label>
            <input asp-for="ConfirmarContrasena" type="password"  />
        </div>

        <button type="submit" class="btn-primary">Guardar cambios</button>
        
        <a href="@Url.Action("Index", "CustomerMvc")" class="btn btn-ghost">Volver</a>


       

    </form>
</div>
